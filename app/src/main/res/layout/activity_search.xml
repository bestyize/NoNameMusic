<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SearchActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <SearchView
            android:layout_weight="7"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:id="@+id/search_view"
            android:queryHint="在此输入歌曲名称"
            android:textColor="@color/colorWhite"
            android:layout_width="0dp"
            android:layout_height="match_parent"></SearchView>
        <LinearLayout
            android:id="@+id/ll_show_download_list"
           android:layout_weight="1"
            android:padding="4dp"
            android:background="@color/color_deep_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:background="@mipmap/icon_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/search_notify"
        android:text="点击搜索"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_music_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>