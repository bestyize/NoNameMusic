<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/ll_music_list_item"
    style="@style/MusicListStyle">
    <LinearLayout

        android:orientation="vertical"
        android:layout_weight="3"
        android:id="@+id/ll_music_list_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_music_item_songname"
            android:layout_weight="1"
            android:text="十年"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="0dp"></TextView>
        <TextView
            android:text="陈奕迅|黑白灰"
            android:id="@+id/tv_music_item_detail"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_download_progress"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:text="下载进度：0%"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></TextView>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_download_start"
            android:text="暂停"
            android:textColor="@color/colorRed"
            android:backgroundTint="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp"></Button>
    </LinearLayout>

</LinearLayout>